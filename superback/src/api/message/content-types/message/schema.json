{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "singularName": "message",
    "pluralName": "messages",
    "displayName": "Message"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid"
    },
    "isSeen": {
      "type": "boolean"
    },
    "content": {
      "type": "string",
      "maxLength": 250,
      "required": true
    },
    "message_media": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "date": {
      "type": "datetime"
    },
    "reply": {
      "type": "text",
      "maxLength": 250
    }
  }
}
